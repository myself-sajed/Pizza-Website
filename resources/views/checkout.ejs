<body class="bg-light text-dark">
  <div class="cover-container d-flex w-100 h-100 p-3 mx-auto flex-column">
    <header class="mb-auto">
      <div>
        <div>
          <a href="/" class="float-md-start mb-0 text-decoration-none text-dark header-font">Sajed's
            Pizza</a>
        </div>
        <nav class="nav nav-masthead justify-content-center float-md-end">
          <a class="nav-link text-dark" aria-current="page" href="/">Home</a>
          <a class="nav-link text-dark" href="/explore">Explore</a>
          <a class="nav-link text-dark" href="/cart">Cart<span class="badge bg-dark text-light" id="cartCounter" style="margin-left: 3px;
            padding: 2px;">
              <%= session.cart ? session.cart.totalQty : '0' %>
            </span></a>

          <%if(user){%>
            <a class="nav-link text-dark" href="/orders">Orders</a>
            <form action="/logout" method="POST" , id="logout">
              <a class="nav-link text-dark mx-3" href="#" onclick="document.getElementById('logout').submit();">Log
                Out</a>
            </form>
            <%}else{%>
              <a class="nav-link text-dark" href="/login">Log In</a>
              <a class="nav-link text-dark" href="/signup">Sign Up</a>
              <%}%>
        </nav>

      </div>
    </header>

    <div class="container">
      <main>
        <div class="py-5 text-center">
          <img class="d-block mx-auto mb-4" src="/media/pizza.png" alt="" width="85" height="85">
          <h1>Checkout </h1>
          <p class="lead">One step to get delicious pizzas</p>
        </div>

        <div class="row g-5">
          <div class="col-md-5 col-lg-4 order-md-last">
            <h4 class="d-flex justify-content-between align-items-center mb-3">
              <span class="text-primary">Your cart</span>
            </h4>
            <ul class="list-group mb-3">
              <li class="list-group-item d-flex justify-content-between lh-sm">
                <div>
                  <h6 class="my-0">Pizzas</h6>
                  <small class="text-muted">Quantity</small>
                </div>
                <span class="text-muted">
                  <%=session.cart.totalQty%>
                </span>
              </li>

              <li class="list-group-item d-flex justify-content-between">
                <span>Total (Rs)</span>
                <strong>Rs. <%=session.cart.totalPrice%></strong>
              </li>
            </ul>


          </div>


          <!-- Main Form  -->

          <div class="col-md-7 col-lg-8">
            <h4 class="mb-3">Billing address</h4>


            <form class="needs-validation" novalidate action="/checkout" method="POST">

              <div class="row g-3">
                <div class="col-sm-12">
                  <label for="firstName" class="form-label">Full Name</label>
                  <input type="text" class="form-control" name="name" placeholder="Shaikh Sajed" value="" required>
                  <div class="invalid-feedback">
                    Valid name is required.
                  </div>
                </div>


                <div class="col-12">
                  <label for="address" class="form-label">Address</label>
                  <input type="text" class="form-control" name="address" placeholder="1234 Main St" required>
                  <div class="invalid-feedback">
                    Please enter your shipping address.
                  </div>
                </div>

                <div class="col-12">
                  <label for="address2" class="form-label">Phone Number</label>
                  <input type="text" class="form-control" name="phone" placeholder="Phone Number" required>
                  <div class="invalid-feedback">
                    Please Enter Phone number
                  </div>
                </div>



                <hr class="my-4">

                <div class="form-check">
                  <input type="checkbox" class="form-check-input" id="same-address">
                  <label class="form-check-label" for="same-address">Shipping address is the same as my billing
                    address</label>
                </div>

                <div class="form-check">
                  <input type="checkbox" class="form-check-input" id="save-info">
                  <label class="form-check-label" for="save-info">Save this information for next time</label>
                </div>

                <hr class="my-4">

                <button class="w-100 btn btn-primary btn-lg" type="submit">Place Order</button>
            </form>
          </div>
        </div>
      </main>

      <br><br><br><br><br>
    </div>


    <script src="../assets/dist/js/bootstrap.bundle.min.js"></script>

    <script src="../js/form-validation.js"></script>
</body>

</html>