<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x" crossorigin="anonymous">

    <title>Order Status</title>
    <style>
        .bd-placeholder-img {
            font-size: 1.125rem;
            text-anchor: middle;
            -webkit-user-select: none;
            -moz-user-select: none;
            user-select: none;
        }

        @media (min-width: 768px) {
            .bd-placeholder-img-lg {
                font-size: 3.5rem;
            }
        }

        /* Header */
        .nav-masthead .nav-link {
            padding: .25rem 0;
            font-weight: 700;
            color: rgb(0, 0, 0);
            background-color: transparent;
            border-bottom: .25rem solid transparent;
        }

        .cover-container {
            max-width: 65em;
        }

        .nav-masthead .nav-link:hover,
        .nav-masthead .nav-link:focus {
            border-bottom-color: rgba(32, 26, 26, 0.25);
        }

        .nav-masthead .nav-link+.nav-link {
            margin-left: 1rem;
        }

        .nav-masthead .active {
            color: rgb(3, 0, 0);
            border-bottom-color: rgb(5, 0, 0);
        }

        .bg {
            background: #000000;
            /* fallback for old browsers */
            background: -webkit-linear-gradient(to left, #312f2f, #000000);
            /* Chrome 10-25, Safari 5.1-6 */
            background: linear-gradient(to left, #3a3838, #000000);
            /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */


        }

        .header-font {
            color: rgb(0, 0, 0);
            font-size: 30px;
            font-weight: bold;
            font-family: "Brush Script MT", cursive;
        }

        .btn-cart {
            background: #000000;
            background: -webkit-linear-gradient(to right, #434343, #000000);
            background: linear-gradient(to right, #434343, #000000);
            border-radius: 20rem;
            color: rgb(2, 0, 0);
            margin-top: 1rem
        }

        .status {
            display: flex;
            justify-content: center;
        }

        .prog {
            transform: rotate(90deg);
            height: 10px;
        }



        /* Create two unequal columns that floats next to each other */


        .left {
            width: 30%;
        }

        .right {
            width: 70%;
        }

        /* Clear floats after the columns */
        .row:after {
            content: "";
            display: table;
            clear: both;
        }
    </style>
</head>

<body>

    <div class="cover-container d-flex w-100 h-100 p-3 mx-auto flex-column">
        <header class="mb-auto">
            <div>
                <div>
                    <a href="/" class="float-md-start mb-0 text-decoration-none text-dark header-font">Sajed's
                        Pizza</a>
                </div>
                <nav class="nav nav-masthead justify-content-center float-md-end">
                    <a class="nav-link" aria-current="page" href="/">Home</a>
                    <a class="nav-link" href="/explore">Explore</a>
                    <a class="nav-link" href="/cart">Cart<span class="badge bg-dark text-light" id="cartCounter" style="margin-left: 3px;
                padding: 2px;">
                            <%= session.cart ? session.cart.totalQty : '0' %>
                        </span></a>
                    <%if(user){%>
                        <a class="nav-link" href="/orders">Orders</a>
                        <form action="/logout" method="POST" , id="logout">
                            <a class="nav-link mx-3" href="#" onclick="document.getElementById('logout').submit();">Log
                                Out</a>
                        </form>
                        <%}else{%>
                            <a class="nav-link text-dark" href="/login">Log In</a>
                            <a class="nav-link text-dark" href="/signup">Sign Up</a>
                            <%}%>
                </nav>
            </div>
        </header>
    </div>


    <div class="container">
        <h1 class="text-center my-3">Order Status</b></h1>
        <hr>

        <div class="shadow-sm p-3 mb-5 bg-body rounded  text-center">
            <h5> Your Order ID :
                <span class="text-success">
                    <%=order._id%>
                </span>
            </h5>
        </div>
    </div>




    <!-- Main Status -->
    <div class="container">
        <div class="row container">
            <div class="column left">
                <%if(order.status=='Order Placed Successfully'){%>
                    <figure width="50">
                        <img src="/media/placed.png" alt="" height="50" , width="50">
                        <figcaption class="text-success"><b> Placed </b></figcaption>
                    </figure>
                    <%}else{%>
                        <figure class=>
                            <img src="/media/placed.png" alt="" height="50" , width="50">
                            <figcaption class="text-muted">Placed</figcaption>
                        </figure>
                        <%}%>


                            <%if(order.status=='Verified'){%>
                                <figure class=>
                                    <img src="/media/verified.png" alt="" height="50" , width="50">
                                    <figcaption class="text-success"><b> Verified</b></figcaption>
                                </figure>
                                <%}else{%>
                                    <figure class=>
                                        <img src="/media/verified.png" alt="" height="50" , width="50">
                                        <figcaption class="text-muted">Verified</figcaption>
                                    </figure>
                                    <%}%>

                                        <%if(order.status=='Prepared'){%>
                                            <figure class=>
                                                <img src="/media/prepared.png" alt="" height="50" , width="50">
                                                <figcaption class="text-success"> <b>Prepared</b></figcaption>
                                            </figure>
                                            <%}else{%>
                                                <figure class=>
                                                    <img src="/media/prepared.png" alt="" height="50" , width="50">
                                                    <figcaption class="text-muted">Prepared</figcaption>
                                                </figure>
                                                <%}%>

                                                    <%if(order.status=='Out for Delivery'){%>
                                                        <figure class=>
                                                            <img src="/media/delivery.png" alt="" height="50" ,
                                                                width="50">
                                                            <figcaption class="text-success"><b> Out for Delivery</b>
                                                            </figcaption>
                                                        </figure>
                                                        <%}else{%>
                                                            <figure class=>
                                                                <img src="/media/delivery.png" alt="" height="50" ,
                                                                    width="50">
                                                                <figcaption class="text-muted">Out for Delivery
                                                                </figcaption>
                                                            </figure>
                                                            <%}%>

                                                                <%if(order.status=='Delivered'){%>
                                                                    <figure class=>
                                                                        <img src="/media/completed.png" alt=""
                                                                            height="50" , width="50">
                                                                        <figcaption class="text-success"><b>
                                                                                Delivered</b>
                                                                        </figcaption>
                                                                    </figure>
                                                                    <%}else{%>
                                                                        <figure class=>
                                                                            <img src="/media/completed.png" alt=""
                                                                                height="50" , width="50">
                                                                            <figcaption class="text-muted"> Delivered
                                                                            </figcaption>
                                                                        </figure>
                                                                        <%}%>


            </div>
            <div class="column right">
                <div class="shadow-lg p-3 mb-5 bg-body rounded">
                    <h3>Current Status</h3>
                    <span class="text-success">
                        <%=order.status%>
                    </span>
                    <hr>
                    <h3>Items</h3>
                    <% for (let pizza of Object.values(order.items)) {%>
                        <p class="text-success my-1">
                            <%=pizza.item.name%> -
                                <span class="text-dark">
                                    <%=pizza.qty%> Pcs
                                </span>
                        </p>
                        <% } %>
                            <hr>

                </div>
            </div>
        </div>
    </div>



    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-gtEjrD/SeCtmISkJkNUaaKMoLD0//ElJ19smozuHV6z3Iehds+3Ulb9Bn9Plx0x4"
        crossorigin="anonymous"></script>

</body>

</html>